{
  "$schema": "http://json.schemastore.org/prettierrc",
  "parser": "babel",

  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "all",

  "bracketSpacing": true,
  "arrowParens": "always",

  "proseWrap": "always",
  "htmlWhitespaceSensitivity": "strict",

  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,

  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "parser": "vue"
      }
    }
  ]
}
